{
  "name": "@discourse/lint-configs",
  "version": "1.2.0",
  "description": "Shareable lint configs for Discourse core, plugins, and themes",
  "author": "Discourse",
  "license": "MIT",
  "keywords": [
    "discourse"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/discourse/lint-configs.git"
  },
  "homepage": "https://github.com/discourse/lint-configs#readme",
  "type": "module",
  "exports": {
    "./eslint": {
      "require": "./eslintrc.cjs"
    },
    "./eslint-theme": {
      "require": "./eslint-theme.cjs"
    },
    "./prettier": {
      "require": "./.prettierrc.cjs"
    },
    "./template-lint": {
      "require": "./template-lint.config.cjs"
    }
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern **/*.cjs **/*.js && pnpm prettier --check .",
    "test": "cd ../test && node test.js"
  },
  "dependencies": {
    "@babel/core": "^7.23.5",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/plugin-proposal-decorators": "^7.23.5",
    "ember-template-lint": "^5.13.0",
    "eslint": "^8.54.0",
    "eslint-plugin-decorator-position": "^5.0.2",
    "eslint-plugin-ember": "^11.11.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-class-members": "^1.19.0",
    "globals": "^13.23.0",
    "prettier": "^2.8.8",
    "prettier-plugin-ember-template-tag": "^0.3.2"
  },
  "peerDependencies": {
    "ember-template-lint": "^5.13.0",
    "eslint": "^8.54.0",
    "prettier": "^2.8.8"
  }
}
